@model JokesWebApp.Models.Joke

@{
    ViewData["Title"] = "Edit";
}


<div class="jumbotron shadow-sm">
    <h1>Edit</h1>
    
    <h4>Joke</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="JokeQestion" class="control-label"></label>
                    <input asp-for="JokeQestion" class="form-control" />
                    <span asp-validation-for="JokeQestion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JokeAnswer" class="control-label"></label>
                    <input asp-for="JokeAnswer" class="form-control" />
                    <span asp-validation-for="JokeAnswer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
